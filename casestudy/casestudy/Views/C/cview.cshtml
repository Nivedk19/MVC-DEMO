@model IEnumerable<casestudy.Models.Product>

@{
    ViewBag.Title = "E cart";
}

<h2>cview</h2>

<p>

    @using (Html.BeginForm("cview", "c", FormMethod.Post))
    {
        // @Html.TextBox("key", "", new { @class = "form - control" })
       @Html.DropDownList("key",
       new List<SelectListItem>
       {
             new SelectListItem{Text="LG",Value="LG",Selected=true},
           new SelectListItem { Text = "SAMSUNG", Value = "SAMSUNG" },
           new SelectListItem { Text = "DELL", Value = "DELL" }


       }
      )
        <br />
        <input type="submit" value="Search" class="bg-secondary" />
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.productname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoryname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.units)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.discount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.productname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoryname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.units)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)@Html.DisplayName("₹")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.discount)@Html.DisplayName("₹")
        </td>
        <td>
            @Html.ActionLink("View Detials", "Detials",new { id = item.productid})
        </td>
    </tr>
}

</table>
