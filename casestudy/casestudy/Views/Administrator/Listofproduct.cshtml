@model IEnumerable<casestudy.Models.Product>

@{
    ViewBag.Title = "Listofproduct";
}

<h2>Listofproduct</h2>

<p>
    @Html.ActionLink("Add New", "Adding")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.productname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoryname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.units)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.discount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.productname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoryname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.units)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)@Html.DisplayName("₹")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.discount)@Html.DisplayName("₹")
        </td>
        <td>
            @Html.ActionLink("Edit", "edit", new { id=item.productid }) |
            @Html.ActionLink("Details", "details", new { id =item.productid }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.productid })
        </td>
    </tr>
}

</table>
